<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
	$("#agreeMsg").hide();
	$("#all_chk").prop("checked",false);
		setCheck();	
		
	$("#service").click(function(){
		 checked();
	});
	$("#privacy").click(function(){
		checked();
	});
	$("#warranty").click(function(){
		 checked();
	
	});
});

	function setCheck(){
		if($("#all_chk").is(":checked")){
			$("#service").prop("checked",true);
			$("#privacy").prop("checked",true);
			$("#warranty").prop("checked",true);
		}else{
			$("#service").prop("checked",false);
			$("#privacy").prop("checked",false);
			$("#warranty").prop("checked",false);
		}
		return true;
	}
	
	function checked(){
		  if( !$("#service").is(":checked") || !$("#privacy").is(":checked") || !$("#warranty").is(":checked")){
	            $("#all_chk").prop("checked",false);
	        }

	        if( $("#service").is(":checked") && $("#privacy").is(":checked") && $("#warranty").is(":checked")) {
	            $("#all_chk").prop("checked",true);
	        }

	        return true;
	    }
	function formCheck(){
		var res = true;

        if ($("#service").is(":checked") == false || $("#privacy").is(":checked") == false || $("#warranty").is(":checked") == false) {
            $("#agreeMsg").show();
            res = false;
        } else {
            $("#agreeMsg").hide();
        }

        return res;
    }
</script>
